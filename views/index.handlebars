<h1>Eat The Burgers</h1>

<div class="container">

  <div class="row">

    {{!-- two columns for uneaten, eaten, and add new burgers --}}
    <div class="col-sm-6">
      <h2>These burgers are waiting to be eaten.</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
    <h2>These burgers were already eaten. Yum!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="row" id="add">

      <h2>Add a burger!</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="bn">Burger Name:</label>
          <input type="text" id="bn" name="name">
        </div>
        <button type="submit" class="create-burger">Add A Burger</button>
      </form>
        <p>Enter the name of a burger you want, then click submit.</p>

    </div>
  </div>

</div>
